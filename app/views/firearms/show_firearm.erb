<% if logged_in? %>
<div class="container">
  <div class="row">
    <blockquote class="blockquote">
      <label><h3>Firearm:</h3></label><br>
      <%= @firearm.name %> <br><br>
      <label><h3>Barrel round count:</h3></label><br>
      <%= @firearm.round_count %> <br><br>
    </blockquote>
  </div>
  <div class="row">
    <% if @firearm.user_id == current_user.id %>
    <div class="col-2">
      <a class="btn btn-outline-warning btn-sm" role="button" href="/firearms/<%= @firearm.id %>/edit">Edit Firearm </a>
    </div>
    <div class="col-2">
      <form method="post" action="/firearms/<%= @firearm.id %>/delete">
        <input id="hidden" type="hidden" name="_method" value="DELETE">
        <input class="btn btn-outline-danger btn-sm" type="submit" value="Delete Firearm">
      </form>
    </div>
    <% end %>
    <% end %>
    <div class="col-2">
      <a class="btn btn-outline-success btn-sm" role="button" href="/firearms/new">Add new firearm</a>
    </div>
  </div>
</div>
